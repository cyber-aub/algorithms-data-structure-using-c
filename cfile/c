#include <stdio.h>

int main(void){
    int x;
    printf("Enter a number: ");
    scanf("%d", &x);   

    int y;
    printf("enter the second number");
    scanf("%d", &y);

    char operator;
    printf("Enter an operator: ");
    scanf("%c", &operator);

    switch(operator){
        case '+':
            printf("%d + %d = %d", x, y, x + y);
            break;
        case '-':
    }       printf("%d - %d = %d", x, y, x - y);
            break;
        case '*':
            printf("%d * %d = %d", x, y, x * y);
            break;
        case '/':
            printf("%d / %d = %d", x, y, x / y);
            break;
        default:
            printf("Error! operator is not correct");
    }   


}